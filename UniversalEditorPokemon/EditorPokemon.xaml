<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="UniversalEditorPokemon.EditorPokemon" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition
				Width="5*" />
		</Grid.ColumnDefinitions>
		<Image
			x:Name="imgPokemon" />
		<TabControl
			Grid.Column="1">
			<TabItem
				Header="Información Básica">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition
							Height="0.428571428571429*" />
						<RowDefinition
							Height="1.57142857142857*" />
					</Grid.RowDefinitions>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition
								Width="0.650900900900901*" />
							<ColumnDefinition
								Width="1.3490990990991*" />
						</Grid.ColumnDefinitions>
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition />
								<RowDefinition />
							</Grid.RowDefinitions>
							<TextBox
								x:Name="tbxNombre" />
							<Grid
								Grid.Row="1">
								<Grid.ColumnDefinitions>
									<ColumnDefinition />
									<ColumnDefinition />
								</Grid.ColumnDefinitions>
								<TextBox
									x:Name="tbxAltura" />
								<TextBox
									x:Name="tbxPeso"
									Grid.Column="1" />
							</Grid>
						</Grid>
						<TextBox
							x:Name="tbxDescripcion"
							Grid.Column="1" />
					</Grid>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>